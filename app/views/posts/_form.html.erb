<%= form_with(model:@post, local:true) do |form| %>
  <div class="field">
  <br>
     <%= form.label :title %>
  </div>
  <div class="field">
     <%= form.text_field :title %>
  </div>

   <div class="field">
     <%= form.label :description %>
     <%= form.rich_text_area :description %>
     # rails action_text:install + webpack
  </div>

   <div>
    <%= form.label :file %>
    <%= form.file_field :file %>
  </div>

  <div>
     <%= form.submit %>
  </div>
<%end%>